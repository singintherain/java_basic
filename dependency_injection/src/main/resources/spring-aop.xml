<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="click1" class="com.lvsong.Click"/>
    <bean id="click2" class="com.lvsong.Click"/>
    <bean id="click3" class="com.lvsong.Click"/>

    <bean id="clickProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="click1"/>
        <property name="interceptorNames">
            <list>
                <value>hijackBeforeMethod</value>
            </list>
        </property>
    </bean>

    <bean id="createOrderService" class="com.lvsong.CreateOrder">
        <property name="actionList">
            <list>
                <bean id="clickProxy1" class="org.springframework.aop.framework.ProxyFactoryBean">
                    <property name="target" ref="click1"/>
                    <property name="interceptorNames">
                        <list>
                            <value>hijackBeforeMethod</value>
                        </list>
                    </property>
                </bean>
                <bean id="clickProxy2" class="org.springframework.aop.framework.ProxyFactoryBean">
                    <property name="target" ref="click2"/>
                    <property name="interceptorNames">
                        <list>
                            <value>hijackBeforeMethod</value>
                        </list>
                    </property>
                </bean>
                <bean id="clickProxy3" class="org.springframework.aop.framework.ProxyFactoryBean">
                    <property name="target" ref="click3"/>
                    <property name="interceptorNames">
                        <list>
                            <value>hijackBeforeMethod</value>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="hijackBeforeMethod" class="com.lvsong.HijackBeforeMethod"/>

    <bean id="createOrderProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="createOrderService"/>
        <property name="interceptorNames">
            <list>
                <value>hijackBeforeMethod</value>
            </list>
        </property>
    </bean>
</beans>